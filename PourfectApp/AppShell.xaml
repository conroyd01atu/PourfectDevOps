<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PourfectApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PourfectApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#4A2C17"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="#D3D3D3">

    <TabBar>
        <Tab Title="Record">
            <Tab.Icon>
                <FontImageSource Glyph="+" FontFamily="OpenSansRegular" Size="24" Color="White"/>
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate views:RecordBrewPage}" />
        </Tab>

        <Tab Title="History">
            <Tab.Icon>
                <FontImageSource Glyph="☰" FontFamily="OpenSansRegular" Size="24" Color="White"/>
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate views:PastBrewsPage}" />
        </Tab>

        <Tab Title="Recipes">
            <Tab.Icon>
                <FontImageSource Glyph="📖" FontFamily="OpenSansRegular" Size="24" Color="White"/>
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate views:RecipesPage}" />
        </Tab>

        <Tab Title="Timer">
            <Tab.Icon>
                <FontImageSource Glyph="⏱" FontFamily="OpenSansRegular" Size="24" Color="White"/>
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate views:TimerPage}" />
        </Tab>

        <Tab Title="Profile">
            <Tab.Icon>
                <FontImageSource Glyph="👤" FontFamily="OpenSansRegular" Size="24" Color="White"/>
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>