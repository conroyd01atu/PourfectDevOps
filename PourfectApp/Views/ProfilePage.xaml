<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PourfectApp.Views.ProfilePage"
             Title="Profile"
             BackgroundColor="#F5F5F5">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label Text="Profile" 
               FontSize="24" 
               FontAttributes="Bold"
               TextColor="#4A2C17"
               HorizontalOptions="Center" 
               Margin="0,10,0,20"/>

        <!-- User Info -->
        <Frame BackgroundColor="White" CornerRadius="10" Padding="20" HasShadow="True">
            <VerticalStackLayout Spacing="15">
                <Label Text="â˜•" FontSize="60" HorizontalOptions="Center"/>

                <Label x:Name="UsernameLabel" 
                       FontSize="20" 
                       FontAttributes="Bold"
                       TextColor="#4A2C17"
                       HorizontalOptions="Center"/>

                <Label x:Name="UserTypeLabel" 
                       FontSize="14" 
                       TextColor="#666"
                       HorizontalOptions="Center"/>

                <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" Margin="0,10"/>

                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" RowSpacing="10">
                    <Label Text="Total Brews" 
                           TextColor="#666" 
                           HorizontalOptions="Center"
                           Grid.Row="0" Grid.Column="0"/>
                    <Label x:Name="TotalBrewsLabel" 
                           Text="0" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           TextColor="#4A2C17"
                           HorizontalOptions="Center"
                           Grid.Row="1" Grid.Column="0"/>

                    <Label Text="Total Recipes" 
                           TextColor="#666" 
                           HorizontalOptions="Center"
                           Grid.Row="0" Grid.Column="1"/>
                    <Label x:Name="TotalRecipesLabel" 
                           Text="0" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           TextColor="#4A2C17"
                           HorizontalOptions="Center"
                           Grid.Row="1" Grid.Column="1"/>
                </Grid>
            </VerticalStackLayout>
        </Frame>

        <!-- Actions -->
        <VerticalStackLayout Spacing="10">
            <Button x:Name="LoginRegisterButton"
                    Text="Login / Register" 
                    Clicked="OnLoginRegisterClicked"
                    BackgroundColor="#8B4513"
                    TextColor="White"
                    CornerRadius="5"
                    IsVisible="False"/>

            <Button x:Name="LogoutButton"
                    Text="Logout" 
                    Clicked="OnLogoutClicked"
                    BackgroundColor="#DC3545"
                    TextColor="White"
                    CornerRadius="5"
                    IsVisible="False"/>

            <Button Text="Export My Data" 
                    Clicked="OnExportDataClicked"
                    BackgroundColor="White"
                    TextColor="#4A2C17"
                    BorderColor="#4A2C17"
                    BorderWidth="1"
                    CornerRadius="5"/>

            <Button Text="About Pourfect" 
                    Clicked="OnAboutClicked"
                    BackgroundColor="White"
                    TextColor="#4A2C17"
                    BorderColor="#4A2C17"
                    BorderWidth="1"
                    CornerRadius="5"/>
        </VerticalStackLayout>

    </VerticalStackLayout>

</ContentPage>